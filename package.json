{
  "name": "tabme-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "TabMe browser Tab and Bookmark manager",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "client:dev": "npm run watch --workspace=apps/client",
    "client:build": "npm run build --workspace=apps/client",
    "client:test": "npm run test --workspace=apps/client",
    "client:publish": "npm run publish --workspace=apps/client",

    "server:dev": "npm run dev --workspace=apps/server",
    "server:build": "npm run build --workspace=apps/server",
    "server:test": "npm run test --workspace=apps/server",

    "build:all": "npm run build --workspaces",
    "test:all": "npm run test --workspaces",
    "clean": "npm run clean --workspaces",
    "install:all": "npm install",
    
    "generate-api": "npm run generate-api --workspace=apps/client"
  },
  "devDependencies": {
    "typescript": "^5.6.3",
    "prettier": "^2.2.1",
    "@types/node": "^20.19.0",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "rimraf": "^3.0.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
} 